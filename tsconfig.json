{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2015"
    ],
    "declaration": true,
    "outDir": "./dist/",
    "removeComments": true,
    "downlevelIteration": true,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "resolveJsonModule": true,
    "paths": {
      "@core/*": [
        "app/core/*"
      ],
      "@api/*": [
        "app/api/*"
      ],
      "@auth/*": [
        "app/auth/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@environment/*": [
        "environment/*"
      ],
      "@lib/*": [
        "lib/*"
      ]
    },
    "noStrictGenericChecks": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ]
  }
}