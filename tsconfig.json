{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015"
    ],
    "declaration": true,
    "outDir": "./dist/","removeComments": true,
    "downlevelIteration": true,
    "strict": false, 
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "paths": {
      "@core/*":["app/core/*"],
      "@api/*":["app/api/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noEmitHelpers": true
  }
}